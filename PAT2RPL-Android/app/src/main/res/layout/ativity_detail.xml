<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".isiApp.DetailActivity">

    <TextView
        android:layout_width="match_parent"
        android:text="Hasil ketikkan anda:"
        android:layout_marginTop="30dp"
        android:textColor="#000"
        android:layout_marginBottom="50dp"
        android:layout_gravity="center"
        android:textSize="40dp"
        android:gravity="center"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:text="Nama Lengkap:"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/getnamalengkap"
            android:layout_weight="2"
            android:text="Get Nama Lengkap"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!-- Email -->
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:text="Umur"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/getUmur"
            android:layout_weight="2"
            android:text="Get Umur"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!-- Alamat -->
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:text="Alamat"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/getAlamat"
            android:layout_weight="2"
            android:text="Get Alamat"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </LinearLayout>
    <!-- Jenis Kelamin -->
    <LinearLayout
        android:layout_marginTop="1dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <TextView
            android:layout_weight="3"
            android:text="Nomor Telp:"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/getNT"
            android:layout_weight="2"
            android:text="Get NomorTelp"
            android:textSize="8pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>
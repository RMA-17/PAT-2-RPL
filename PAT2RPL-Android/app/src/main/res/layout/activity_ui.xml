<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIApp.YuAiActivity"
    android:background="#4C97DC">

    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/judul"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/nama"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:text="Ini teks"
            android:textColor="#FFFFFF"
            android:textSize="16pt"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20pt"
            android:layout_below="@id/nama"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="25pt"
                android:id="@+id/upper1"
                android:textColor="#FFF"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:text="Tulis teks disini"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:textSize="12pt"
                android:id="@+id/welcome2"
                android:fontFamily="sans-serif"
                android:textColor="#FFF"
                android:text="By the way tombol dibawah g bisa digunakan, back saja"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:id="@+id/buttonfield"
                android:layout_marginTop="90pt"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <Button
                    android:layout_gravity="center"
                    android:layout_width="350dp"
                    android:layout_height="65dp"
                    android:id="@+id/buttonsignin"
                    android:background="@drawable/transparentbt"
                    android:textSize="30dp"
                    android:textAllCaps="false"
                    android:fontFamily="sans-serif-black"
                    android:textColor="#FFF"
                    android:text="Sign In"/>
                <Button
                    app:strokeWidth="10px"
                    android:id="@+id/buttonBack"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:background="@drawable/backgroundbt"
                    android:textAllCaps="false"
                    android:layout_marginTop="20dp"
                    app:backgroundTint="@color/white"
                    android:layout_width="350dp"
                    android:textColor="#4C97DC"
                    android:textSize="30dp"
                    android:text="Back"
                    android:layout_height="65dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>
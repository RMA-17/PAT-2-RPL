<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UIApp.YuAiActivity"
    android:background="@drawable/bgui">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/top"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20pt"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <LinearLayout
                android:id="@+id/buttonfield"
                android:layout_marginTop="160pt"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:fontFamily="sans-serif"
                    android:textColor="#FFF"
                    android:textSize="30dp"
                    android:text="Tidak ada yang perlu dilihat disini, kembalilah"
                    android:layout_height="wrap_content"/>
                <Button
                    android:id="@+id/buttonBack"
                    android:layout_gravity="center"
                    android:fontFamily="sans-serif-black"
                    android:background="@drawable/backgroundbt"
                    android:textAllCaps="false"
                    android:layout_marginTop="70dp"
                    android:layout_width="210dp"
                    android:textColor="#4C97DC"
                    android:textSize="30dp"
                    android:text="Back"
                    android:layout_height="65dp"/>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>